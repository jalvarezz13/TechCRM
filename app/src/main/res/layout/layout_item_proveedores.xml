<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imProveedor"
            android:layout_width="100dp"
            android:layout_height="100sp"
            android:layout_gravity="bottom|center"
            app:srcCompat="@drawable/building" />

        <ImageView
            android:id="@+id/imFav"
            app:srcCompat="@drawable/estrella_amarilla"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCorreoProveedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example@mail.com" />

        <TextView
            android:id="@+id/lblTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/lblDireccion"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_gravity="right"
            android:layout_marginRight="5sp"
            android:gravity="left"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imTlf"
            app:srcCompat="@drawable/phone"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:foregroundGravity="center"
            android:scaleType="centerInside"
            android:onClick="oyente_btnTlf"
            android:src="@drawable/phone" />

        <ImageButton
            android:id="@+id/imWP"
            app:srcCompat="@drawable/whatsapp_logo_11"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:scaleType="centerInside"
            android:onClick="oyente_btnWP"
            android:src="@drawable/whatsapp_logo_11" />

        <ImageButton
            android:id="@+id/imGM"
            app:srcCompat="@drawable/gmail_google"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:scaleType="centerInside"
            android:onClick="oyente_btnGM"
            android:src="@drawable/gmail_google" />
    </LinearLayout>


</LinearLayout>