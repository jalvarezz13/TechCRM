<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imProveedor"
            android:layout_width="100dp"
            android:layout_height="100sp"
            android:layout_gravity="bottom|center"
            app:srcCompat="@drawable/building" />

        <ImageView
            android:id="@+id/imFavProveedor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center"
            app:srcCompat="@drawable/estrella_amarilla" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblNombreProveedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCorreoProveedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example@mail.com" />

        <TextView
            android:id="@+id/lblTelefonoProveedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <TextView
            android:id="@+id/lblDeudaProveedor"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_gravity="right"
            android:layout_marginRight="5sp"
            android:gravity="right"
            android:text="TextView"
            android:textColor="#33D35B" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnLlamarProveedor"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:foregroundGravity="center"
            android:onClick="oyente_btnTlf"
            android:scaleType="centerInside"
            android:src="@drawable/phone"
            app:srcCompat="@drawable/phone" />

        <ImageButton
            android:id="@+id/btnWhatsAppProveedor"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:onClick="oyente_btnWP"
            android:scaleType="centerInside"
            android:src="@drawable/whatsapp_logo_11"
            app:srcCompat="@drawable/whatsapp_logo_11" />

        <ImageButton
            android:id="@+id/btnCorreoProveedor"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:onClick="oyente_btnGM"
            android:scaleType="centerInside"
            android:src="@drawable/gmail_google"
            app:srcCompat="@drawable/gmail_google" />
    </LinearLayout>


</LinearLayout>