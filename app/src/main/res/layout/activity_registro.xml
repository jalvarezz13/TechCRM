<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:orientation="vertical"
    tools:context=".Registro">


    <Button
        android:id="@+id/btnVolverRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/volver"
        app:icon="@drawable/abc_vector_test" />

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="@string/registryForm"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblIntroduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#6A6A6A"
        android:text="@string/introduceYourData"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:baselineAligned="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblName"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:text="@string/name"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ptNameClienteInput"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#1A000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:baselineAligned="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblApellido"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:text="@string/username"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ptApellidoClienteInput"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#1A000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:baselineAligned="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblTlf"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:text="@string/phone"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ptTlf"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#1A000000"
            android:ems="10"
            android:inputType="phone"
            android:textColor="#000000"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:baselineAligned="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblCorreoProveedor"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:text="@string/email"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ptCorreo"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#1A000000"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:baselineAligned="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblPasswd"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:text="@string/pass"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ptPasswd"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#1A000000"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:baselineAligned="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblRPasswd"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:text="@string/repeatPass"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ptRPasswd"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#1A000000"
            android:ems="10"
            android:gravity="center|start"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textStyle="italic" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/cbTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/termsAndConditions"
        tools:text="@string/termsAndConditions" />

    <Button
        android:id="@+id/btnRegistry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#75A6F6"
        android:text="@string/registry" />

</LinearLayout>