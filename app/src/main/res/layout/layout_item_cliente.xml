<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150sp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imCliente"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="bottom|center"
            android:foregroundGravity="bottom|center"
            app:srcCompat="@drawable/avatardefault_92824" />

        <ImageView
            android:id="@+id/imFavCliente"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center"
            android:foregroundGravity="bottom"
            app:srcCompat="@drawable/estrella_amarilla" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblNombreCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCorreoCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example@mail.com" />

        <TextView
            android:id="@+id/lblTelefonoCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <TextView
            android:id="@+id/lblUltConexionCliente"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_gravity="right"
            android:layout_marginRight="5sp"
            android:gravity="right"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="47dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnLlamarCliente"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:foregroundGravity="center"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/phone" />

        <ImageButton
            android:id="@+id/btnWhatsAppCliente"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/whatsapp_logo_11" />

        <ImageButton
            android:id="@+id/btnCorreoCliente"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/gmail_google" />
    </LinearLayout>

</LinearLayout>